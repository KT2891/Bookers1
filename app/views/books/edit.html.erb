<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <div class="new_book_box">
    <div class="new_book_title">Title</div>
    <%= f.text_field :title %>
  </div>

  <div class="new_book_box">
    <div class="new_book_title">Body</div>
    <%= f.text_area :body %>
  </div>
  <div class="new_book_submit">
    <%= f.submit "Update Book" %>
  </div>
<% end %>

<%= link_to "Show", book_path(@book.id), method: :get %>
|
<%= link_to "Back", books_path, method: :get %>
