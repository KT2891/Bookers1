<h1>Books</h1>

<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
  </thead>
  <tbody>
    <!--ブックモデルの全てのデータを順番に代入-->
    <% @books.each do |book|%>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>

<%= form_with model: @book, url: books_path, method: :post do |f| %>

<%= render "layouts/errors_messages" %>

  <div class="new_book_box">
    <div class=" <%= "error_emphasis" if @book.errors[:title].any? %>">
      <label for="book_title">Title</label>
    </div>
    <div class=" <%= "error_emphasis" if @book.errors[:title].any? %>">
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="new_book_box">
    <div class=" <%= "error_emphasis" if @book.errors[:body].any? %>">
      <label for="book_body">Body</label>
    </div>
    <div class=" <%= "error_emphasis" if @book.errors[:body].any? %>">
      <%= f.text_area :body %>
    </div>
  </div>

  <%= f.submit "Create Book" %>
<% end %>